<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= locals.title %></title>
  <meta name="description" content="<%= locals.description %>">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <!-- Registration Form -->
                <div class="card custom-form-container">
                  <div style="background-color: rgba(0, 0, 0, 0.077);" class="card-body">
                        <h1 class="card-title text-center">User Registration Form</h1>
                        <br><br>
                        <form action="/register" method="post">
                            <div class="mb-3 custom-form-field">
                                <input type="text" class="form-control" name="name" placeholder="Enter Name" required>
                            </div>
                            <br>
                            <div class="mb-3 custom-form-field">
                                <input type="email" class="form-control" name="email" placeholder="Enter Email" required>
                            </div>
                            <br>
                            <div class="mb-3 custom-form-field">
                                <input type="text" class="form-control" name="mno" placeholder="Enter Mobile" required>
                            </div>
                            <br>
                            <div class="mb-3 custom-form-field">
                                <input type="password" class="form-control" name="password" placeholder="Enter Password" required>
                            </div>
                            <br>
                            <div class="text-center">
                            <button type="submit" class="btn btn-primary">Register</button>
                            </div>
                        </form>
                        <p class="mt-3">go back to login? <a href="/login">login</a></p>
                        <div class="text-center">

                        <% 
                          if (typeof message !== 'undefined') {
                        %>
                            <p style="color:green;"><%= message %></p>
                        <%
                          }
                        %>
                        </div>
                    </div>
                </div>
                <!-- End Registration Form -->
            </div>
        </div>
    </div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
