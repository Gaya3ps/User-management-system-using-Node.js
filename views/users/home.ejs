      <h5 class="card-title">Profile</h5>
      <p class="card-text"> 
        <table width="50%">
    
        <tr>
            <td>Email</td>
            <td><%= user.email %></td>
        </tr>
        <tr>
            <td>Mobile</td>
            <td><%= user.mobile %></td>
        </tr>
       
    </table></p>
    <br>
      <a href="/logout" class="btn btn-primary">Logout</a>
    </div>
